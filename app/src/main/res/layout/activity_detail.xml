<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Detail"
    android:padding="40dp"
    android:background="#46BCF3">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judul Buku :"
        android:textColor="#000"
        android:textSize="24sp">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtjudulbuku"
        android:text=""
        android:textColor="#000"
        android:textSize="24sp"
        android:editable="false">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Pengarang :"
        android:textColor="#000"
        android:textSize="24sp">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtpengarang"
        android:text=""
        android:textColor="#000"
        android:textSize="24sp"
        android:editable="false">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tahun Terbit :"
        android:textColor="#000"
        android:textSize="24sp">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txttahunterbit"
        android:text=""
        android:textColor="#000"
        android:textSize="24sp"
        android:editable="false">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Penerbit :"
        android:textColor="#000"
        android:textSize="24sp">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtpenerbit"
        android:text=""
        android:textColor="#000"
        android:textSize="24sp"
        android:editable="false">
    </EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keluar"
        android:textColor="#FFCCFFFF"
        android:layout_marginTop="30dp"
        android:id="@+id/btnkeluar"
        android:background="@drawable/style_button"
        android:layout_gravity="center"
        />

</LinearLayout>